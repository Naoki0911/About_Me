
<h1><%= @blog.title %></h1>
<div class="blog-container">
  <% if @blog.image.attached? %>
    <%= image_tag @blog.image.variant(resize_to_limit: [700, 700]), class: "blog-show-image"%>

  <% end %>
  <p class="blog-show-text"><%= @blog.content %></p>
  <a href="/blogs">Back to Blog List</a>
</div>

