<h1>New Blog</h1>
<%= form_with model: [:admin, @blog], local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.label :image, "Upload Image" %>
    <%= form.file_field :image %>
  </div>
  <%= form.submit "Create Blog" %>
<% end %>